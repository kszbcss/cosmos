<project default="bootstrap" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <property name="juno.plugins" value="c:\opt\eclipse\plugins"/>
    <macrodef name="install">
        <attribute name="name"/>
        <attribute name="version"/>
        <sequential>
            <artifact:pom id="mypom" groupId="osgi.bundle" artifactId="@{name}" version="@{version}"/>
            <!-- Workaround for MANTTASKS-170: need to write the POM to disk and reload it -->
            <artifact:writepom pomRefId="mypom" file="@{name}-@{version}.pom"/>
            <artifact:pom id="mypom" file="@{name}-@{version}.pom"/>
            <artifact:install file="${juno.plugins}/@{name}_@{version}.jar">
                <pom refid="mypom"/>
            </artifact:install>
            <delete file="@{name}-@{version}.pom"/>
        </sequential>
    </macrodef>
    <target name="bootstrap">
        <install name="org.eclipse.ecf" version="3.2.0.v20130604-1622"/>
        <install name="org.eclipse.ecf.filetransfer" version="5.0.0.v20130604-1622"/>
        <install name="org.eclipse.ecf.identity" version="3.2.0.v20130604-1622"/>
        <install name="org.eclipse.ecf.provider.filetransfer" version="3.2.0.v20130604-1622"/>
        <install name="org.eclipse.ecf.provider.filetransfer.httpclient4" version="1.0.300.v20130604-1622"/>
        <install name="org.eclipse.equinox.p2.artifact.repository" version="1.1.200.v20130515-2028"/>
        <install name="org.eclipse.equinox.p2.core" version="2.3.0.v20130327-2119"/>
        <install name="org.eclipse.equinox.p2.jarprocessor" version="1.0.300.v20130327-2119"/>
        <install name="org.eclipse.equinox.p2.metadata" version="2.2.0.v20130523-1557"/>
        <install name="org.eclipse.equinox.p2.publisher" version="1.3.0.v20130509-0110"/>
        <install name="org.eclipse.equinox.p2.repository" version="2.3.0.v20130412-2032"/>
        <install name="org.eclipse.equinox.p2.transport.ecf" version="1.1.0.v20130516-1858"/>
        <install name="org.eclipse.equinox.p2.updatesite" version="1.0.400.v20130515-2028"/>
        <install name="org.eclipse.equinox.preferences" version="3.5.100.v20130422-1538"/>
        <install name="org.eclipse.equinox.security" version="1.2.0.v20130424-1801"/>
    </target>
</project>