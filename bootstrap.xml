<project default="bootstrap" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <property name="juno.plugins" value="c:\opt\eclipse\plugins"/>
    <macrodef name="install">
        <attribute name="name"/>
        <attribute name="version"/>
        <sequential>
            <artifact:pom id="mypom" groupId="osgi.bundle" artifactId="@{name}" version="@{version}"/>
            <!-- Workaround for MANTTASKS-170: need to write the POM to disk and reload it -->
            <artifact:writepom pomRefId="mypom" file="@{name}-@{version}.pom"/>
            <artifact:pom id="mypom" file="@{name}-@{version}.pom"/>
            <artifact:install file="${juno.plugins}/@{name}_@{version}.jar">
                <pom refid="mypom"/>
            </artifact:install>
            <delete file="@{name}-@{version}.pom"/>
        </sequential>
    </macrodef>
    <target name="bootstrap">
        <install name="org.eclipse.core.net" version="1.2.200.v20120522-1148"/>
        <install name="org.eclipse.ecf" version="3.1.300.v20120610-1946"/>
        <install name="org.eclipse.ecf.filetransfer" version="5.0.0.v20120610-1946"/>
        <install name="org.eclipse.ecf.identity" version="3.1.200.v20120610-1946"/>
        <install name="org.eclipse.ecf.provider.filetransfer" version="3.2.0.v20120610-1946"/>
        <install name="org.eclipse.ecf.provider.filetransfer.httpclient" version="4.0.200.v20120610-1946"/>
        <install name="org.eclipse.equinox.p2.artifact.repository" version="1.1.200.v20120430-1959"/>
        <install name="org.eclipse.equinox.p2.core" version="2.2.0.v20120430-0525"/>
        <install name="org.eclipse.equinox.p2.jarprocessor" version="1.0.200.v20110808-1657"/>
        <install name="org.eclipse.equinox.p2.metadata" version="2.1.0.v20120430-2001"/>
        <install name="org.eclipse.equinox.p2.publisher" version="1.2.0.v20120428-0117"/>
        <install name="org.eclipse.equinox.p2.repository" version="2.2.0.v20120524-1945"/>
        <install name="org.eclipse.equinox.p2.transport.ecf" version="1.0.100.v20120305-0333"/>
        <install name="org.eclipse.equinox.p2.updatesite" version="1.0.400.v20120412-1615"/>
        <install name="org.eclipse.equinox.preferences" version="3.5.0.v20120522-1841"/>
        <install name="org.eclipse.equinox.security" version="1.1.100.v20120522-1841"/>
    </target>
</project>